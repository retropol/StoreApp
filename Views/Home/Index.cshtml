@model ProductListViewModel


<div class="row">

    <div class="col-md-3">
        <vc:categories-list />

    </div>
    <div class="col-md-9">
        @if (Model.Products.Count() == 0)
        {
            <p>No products found</p>
        }
        else
        {
            <p>Products:</p>
            @foreach (var product in Model.Products)
            {
                <div class="card card-outline-secondary mb-2 p-2">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2>@product.Name</h2>
                            <p>@product.Description</p>
                        </div>
                        <div>
                            <span class="badge rounded-pill text-bg-secondary">@product.Price TL</span>
                        </div>
                    </div>
                    <form asp-page="/Card" method="post">
                        
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button  style="float:right;" type="submit" class="btn btn-outline-success btn-sm pull-right">Add to Cart</button>
                    </form>
                </div>
            }
        }

        <div 
            page-model="@Model.PageInfo" 
            page-action="Index"
            page-class="btn"
            page-class-link="btn-outline-secondary"
            page-class-active="btn-secondary"
            class="btn-group my-2">
        </div>
    </div>
          
</div>
